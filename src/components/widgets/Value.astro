---
import { Icon } from 'astro-icon';
import Picture from '~/components/core/Picture.astro';

const { title, subtitle, subheader, content, image, size, gallery, mosaic } = Astro.props;
---

<section>
	<div class="container px-5 py-24 mx-auto">
		<div class="mx-auto max-w-screen-md text-center mb-8">
			<h2 class="text-4xl tracking-tight font-extrabold">
				{title}
			</h2>
			<p class="mt-2">
				{subtitle}
			</p>
		</div>

		<div class="grid place-items-center">
			<div
				class:list={[
					'bg-white w-full border-gray-200 dark:bg-gray-800 p-6 xl:p-8 rounded justify-between border dark:border-0 shadow dark:border-gray-600',
					size ? size : 'lg:w-1/2',
				]}
			>
				<div class="flex flex-1 flex-col">
					<div class="mb-6">
						<h3 class="mb-8 font-bold text-xl text-center justify-center text-pink-500 dark:text-pink-500">
							{subheader}
						</h3>
						{
							content.map((contentParagraph) => (
								<div class="flex mb-4">
									<div class="flex flex-col items-center mr-4">
										<div>
											<div class="mt-2 flex items-center justify-center w-5 h-5 rounded-full border-pink-600 border-2">
												<Icon name="tabler:check" class="w-3 h-3 text-gray-600 dark:text-slate-200 icon-bold" />
											</div>
										</div>
									</div>
									<div class="pt-1">
										<p class="text-lg text-gray-900 dark:text-slate-300">{contentParagraph}</p>
										<p class="text-gray-700" />
									</div>
								</div>
							))
						}

						<div class="pt-4">
							{
								gallery && (
									<div class="flex flex-wrap md:-m-2 -m-1 justify-center place-items-center items-center">
										<div class="flex flex-wrap w-1/2">
											{gallery.map((imageItem) => (
												<div class="md:p-2 p-1 w-1/2">
													<img class="w-full object-cover h-full object-center block" {...imageItem} />
												</div>
											))}
										</div>
									</div>
								)
							}

							{
								mosaic && (
									<div class="flex flex-wrap md:-m-2 -m-1">
										<div class="flex flex-wrap w-1/2">
											<div class="md:p-2 p-1 w-1/2">
												<img class="w-full object-cover h-full object-center block" {...mosaic['1small']} />
											</div>
											<div class="md:p-2 p-1 w-1/2">
												<img class="w-full object-cover h-full object-center block" {...mosaic['2small']} />
											</div>
											<div class="md:p-2 p-1 w-full">
												<img class="w-full h-full object-cover object-center block" {...mosaic['3large']} />
											</div>
										</div>
										<div class="flex flex-wrap w-1/2">
											<div class="md:p-2 p-1 w-full">
												<img class="w-full h-full object-cover object-center block" {...mosaic['4large']} />
											</div>
											<div class="md:p-2 p-1 w-1/2">
												<img class="w-full object-cover h-full object-center block" {...mosaic['5small']} />
											</div>
											<div class="md:p-2 p-1 w-1/2">
												<img class="w-full object-cover h-full object-center block" {...mosaic['6small']} />
											</div>
										</div>
									</div>
								)
							}

							{
								image && (
									<div class="flex mt-8 justify-center place-items-center items-center">
										<div class="flex flex-col items-center">
											<img width="250" {...image} />
										</div>
									</div>
								)
							}
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
