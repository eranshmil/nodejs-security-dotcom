---
import { Image } from '@astrojs/image/components';
---

<section class="h-screen">
	<div class="container mx-auto flex px-5 py-24 items-center justify-center flex-col">
		<Image
			src={import('/public/images/book/nodejs-secure-coding-book-3d-style.png')}
			class="w-1/4 mb-8 mx-auto shadow-lg"
			width="1114"
			height="1800"
			alt="Node.js Secure Coding book cover"
		/>
		<div class="text-center lg:w-2/3 w-full">
			<h1 class="text-4xl md:text-5xl font-bold leading-tighter tracking-tighter mb-2 font-heading dark:text-gray-200">
				<span class="bg-clip-text text-transparent bg-gradient-to-r from-purple-300 to-secondary-500">
					Practice Node.js Secure Coding
				</span>
			</h1>
			<h2 class="my-auto text-2xl">and win application security in the enterprise</h2>
			<p class="mb-8 leading-relaxed"></p>
			<div class="flex justify-center">
				<a
					class="inline-flex btn text-white border border-pink-500 bg-pink-500 hover:bg-pink-700 hover:border-pink-700 sm:mb-0"
					href="#plans"
					rel="noopener"
				>
					Explore Plans
				</a>
			</div>
		</div>
	</div>
</section>
